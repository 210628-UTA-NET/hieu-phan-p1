@model TheStoreInventoryVM
@{ 
    int sfId = (int)TempData["sfId"];
    TempData.Keep("sfId");
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
</head>
<body>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Product Price</th>
                <th>Available Quantity</th>

            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.ProductName</td>
                <td>@Model.ProductPrice.ToString("C")</td>
                <td>@Model.Quantity</td>
            </tr>
        </tbody>
    </table>

    <form asp-action="AddToCart">

        <div class="mb-3">
            <label class="form-label">Quantity</label>
            <input name="p_quantity" type="number" class="form-control" min="0" max="@Model.Quantity">
        </div>

        <button type="submit" class="btn btn-primary">Add To Cart</button>
    </form>


    @Html.ActionLink("Back", "DisplayAStoreInventory", new { p_sfId = Model.StoreFrontId }, new { @style = "color:white; position:relative; top:10px; width:77px;", @class = "btn btn-danger" })

</body>
</html>