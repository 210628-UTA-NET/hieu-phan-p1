@model TheStoreInventoryVM
@{
    int sfId = (int)TempData["sfId"];
    TempData.Keep("sfId");
}
    <!DOCTYPE html>
    <html>
    <head>
        <meta charset="utf-8" />
        <title></title>
    </head>
    <body>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Product Id</th>
                    <th>Product Name</th>
                    <th>Product Price</th>
                    <th>Available Quantity</th>

                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.ProductId</td>
                    <td>@Model.ProductName</td>
                    <td>@Model.ProductPrice.ToString("C")</td>
                    <td>@Model.Quantity</td>
                </tr>
            </tbody>
        </table>

        <form asp-action="InventoryReplenishInventory">

            <div class="mb-3">
                <label class="form-label">Added Quantity</label>
                <input name="p_quantity" type="number" class="form-control" min="0">
            </div>

            <button type="submit" class="btn btn-primary">Replenish</button>
        </form>


        @Html.ActionLink("Back", "InventoryDisplayAStoreInventory", new { p_sfId = Model.StoreFrontId }, new { @style = "color:white; position:relative; top:10px;", @class = "btn btn-danger" })
    </body>
</html>
