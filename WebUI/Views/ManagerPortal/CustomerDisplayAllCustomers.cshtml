@model IEnumerable<WebUI.Models.CustomerVM>
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
</head>
<body>
    <h1>List Of All Customers</h1>

    @*<button type="button" class="btn btn-secondary">Search</button>
        <a class="btn btn-secondary" asp-action="CreateNewCustomer">Add</a>*@

    <table class="table table-striped">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Address</th>
                <th>City</th>
                <th>State</th>
                <th>Email</th>
                <th>Phone</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Fname)</td>
                    <td>@Html.DisplayFor(modelItem => item.Lname)</td>
                    <td>@Html.DisplayFor(modelItem => item.Address)</td>
                    <td>@Html.DisplayFor(modelItem => item.City)</td>
                    <td>@Html.DisplayFor(modelItem => item.State)</td>
                    <td style="width: 100px">@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>@String.Format("{0:(###) ###-####}", long.Parse(item.Phone))</td>
                    @*<td>
                        @Html.ActionLink("Edit", "CustomerEditCustomer", new { p_id = item.Id }, new { @style = "color:white", @class = "btn btn-secondary" })
                    </td>*@
                </tr>
            }
        </tbody>
    </table>
    <a asp-controller="ManagerPortal" asp-action="Customer" class="btn btn-danger" style="position:relative; top:10px; width:77px;">Back</a>

</body>
</html>